@page
@model UsersApp.Pages.ReadModel
@{
    ViewData["Title"] = "Book Details";
}

<p>Book @Model.b.Title Details</p>
<form method="post" asp-page-handler="ToggleBorrowed">
    <table class="table">
        <tbody>
            <tr>
                <th scope="row">Title</th>
                <td>@Model.b.Title</td>
            </tr>

            <tr>
                <th scope="row">Author</th>
                <td>@Model.b.Author</td>
            </tr>

            <tr>
                <th scope="row">Genre</th>
                <td>@Model.b.Genre</td>
            </tr>

            <tr>
                <th scope="row">Publication Year</th>
                <td>@Model.b.Publication_year</td>
            </tr>

            <tr>
                <th scope="row">Status</th>
                <td>
                    @(Model.b.IsBorrowed ? "Unavailable" : "Available")
                    <input type="hidden" name="Title" value="@Model.b.Title" />
                    
                </td>
            </tr>
        </tbody>
    </table>
</form>

<a asp-page="/Index">Back to List</a>
